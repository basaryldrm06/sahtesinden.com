extends ../components/layout

block content
    .col-12
        .container
            .row
                .col-3.border-end
                    .sidebar     
                        ul.text-start.list-unstyled
                            h4 Offer Type
                            li
                                input#received(type="radio", name="offerStatus", value="received", checked)
                                label(for="received") Received Offers
                            li
                                input#sent(type="radio", name="offerStatus", value="sent")
                                label(for="sent") Sent Offers
                    .sidebar
                        
                        ul.text-start.list-unstyled
                            h4 Offer Status
                            li
                                input#active(type="radio", name="active", value="active", checked)
                                label(for="active") Received Offers
                            li
                                input#completed(type="radio", name="completed", value="completed")
                                label(for="completed") Sent Offers

                .col-9
                    // Orta kısımda dinamik içerik
                    .content
                        if selectedOption === "Alınan Teklifler"
                            p Alınan
                        else if selectedOption === "Verilen Teklifler"
                            // Verilen Teklifler içeriği
                            p Verilen
                        else
                            // Varsayılan içerik (seçim yapılmamışsa)
                            p Seçili bir teklif kategorisi yok.