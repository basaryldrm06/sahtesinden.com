.border-end-2.border-dark.p-2.rounded-2.bg-light
    h4 Display Settings
    .text-start
        div.accordion#accordionPanelsStayOpenExample
    div.accordion-item
        h2.accordion-header(id="sortingSettingsHeader")
            button.accordion-button(type="button" data-bs-toggle="collapse" data-bs-target="#sortingSettings" aria-expanded="true" aria-controls="sortingSettings") Sorting Settings
        div#sortingSettings.accordion-collapse.collapse(aria-labelledby="sortingSettingsHeader")
            div.accordion-body.text-start
                ul.list-unstyled
                    li
                        input#byPrice(type="radio" value="byPrice") 
                        label(for="byPrice") &nbsp; Sort By Price

                    li
                        input#byPopularity(type="radio" value="byPopularity") 
                        label(for="byPopularity") &nbsp; Sort By Popularity

                    li
                        input#byDate(type="radio" value="byDate") 
                        label(for="byDate") &nbsp; Sort By Date

    div.accordion-item
        h2.accordion-header(id="filterSettingsHeader")
            button.accordion-button.collapsed(type="button" data-bs-toggle="collapse" data-bs-target="#filterSettings" aria-expanded="false" aria-controls="filterSettings") Filter Settings
        div#filterSettings.accordion-collapse.collapse(aria-labelledby="filterSettingsHeader")
            div.accordion-body
                .row.justify-content-center
                    .mb-3
                        label(for="minPrice" class="form-label") Minimum Price:
                        input(type="number" class="form-control" id="minPrice" name="minPrice" required)
                    .mb-3
                        label(for="maxPrice" class="form-label") Maximum Price:
                        input(type="number" class="form-control" id="maxPrice" name="maxPrice" required)
                    button(type="button" class="btn btn-primary" onclick="submitPriceRange()") APPLY